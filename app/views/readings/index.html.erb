<h2>Readings</h2>
<table class='table'>
  <tr>
    <th>Recited at</th>
    <th colspan="3">Configuration</th>
  </tr>

  <% @readings.each do |reading| %>
    <tr>
      <td><%= reading.recited_at.strftime('%m-%d-%Y') %></td>
      <td><%= link_to 'Show', reading %></td>
      <td><%= link_to 'Edit', edit_reading_path(id: reading.id) %></td>
      <td><%= link_to 'Delete', reading_path(id: reading.id), method: :delete, data: { confirm: "Are you sure?\n This cannot be undone." } %></td>
    </tr>
  <% end %>
</table>
