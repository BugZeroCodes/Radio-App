<h2>Announcements</h2>
<table>
  <tr>
    <th>Text</th>
    <th>Expires at</th>
  </tr>
  <tr>
  <% @announcements.each do |announcement| %>
    <td><%= announcement.text %></td>
    <td><%= announcement.expires_at %></td>
    <%= link_to 'Show', announcement %>
    <% if current_user.role == 'admin' %>
      <%= link_to 'Edit', edit_announcement_path(id: announcement.id) %>
      <%= link_to 'Delete', announcement_path, method: :delete, id: announcement.id %>
    <% end %>
  <% end %>
  </tr>
</table>
